@* Razor partial view *@

@model CoreBusiness.Category
@{
    string action = ViewBag.Action ?? string.Empty;
}

<form method="post" asp-controller="Categories" asp-action="@action">
    @if (action?.ToLower() == "edit")
    {
        @* Hidden Id field *@
        <input type="hidden" asp-for="Id">
    }

    @* Validation errors summary; Show all. (ModelOnly shows related to model) *@
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Name" class="form-control">
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Description" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Description" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>