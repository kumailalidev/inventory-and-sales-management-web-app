@model CoreBusiness.Product

<div class="form-group">
    <label asp-for="Name" class="col-form-label" readonly></label>
    <input type="text" asp-for="Name" class="form-control" readonly />
</div>
</div>
<div class="form-group">
    <label asp-for="Price" class="col-form-label" readonly></label>
    <input type="text" asp-for="Price" class="form-control" value="@(string.Format(format: "{0:c}", @Model.Price))"
        readonly />
</div>